doctype html
html(lang="en")
    head
        title OACA
        link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600" media="screen")
        link(rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.6/css/all.css" media="screen")
        link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" media="screen")
        link(rel="stylesheet" media="screen" href="/css/oaca.min.css")

    body
        #lf-header
            .container
                a(href="https://www.linuxfoundation.org/projects" target="blank")
                    img(src="/img/lf-projects-horizontal.png")
        header.page-header
            .container
                nav.navbar.navbar-expand-lg.navbar-light
                    a.navbar-brand(href="#")
                        img(src="/img/logo-sm.png")
                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon

                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.ml-auto
                            li.nav-item
                                a.nav-link(href="#") Documentation
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle#nav-donate-dropdown(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Donate
                                .dropdown-menu(aria-labelledby="nav-donate-dropdown")
                                    a.dropdown-item(href="#") Make a Donation
                                    a.dropdown-item(href="#") Become a Sponsor
                                    .dropdown-divider
                                    a.dropdown-item(href="#") Current Sponsors

        #main-content
        .hero.tall
            .container
                h1 Open Alliance for Cloud Adoption
                h3 building sustainable open source ecosystems
                .row
                    .col.getting-started
                        a.btn.btn-outline-primary(href="#") Get Started
                    .col.donate
                        a.btn.btn-outline-primary(href="#") Donate

        main.page-content
            section.page-section.primary
                .container
                    .row
                        .col
                            h3
                                | Producing content and events to help enterprise IT
                            p
                                | The Open Alliance for Cloud Adoption is a
                                span.highlight member-led
                                | consortium of
                                span.highlight global IT organizations
                                | dedicated to easing adoption of
                                span.highlight interoperable
                                | solutions and services addressing
                                span.highlight cloud computing
                                | for enterprises across the globe.

                    .row.icon-blocks.justify-content-center
                        .col-md-4.col-lg-3
                            .icon-block
                                .header
                                    .icon
                                        i.fa.fa-lightbulb.icon-3x
                                            i.circle-border
                                h4 Identify
                                p Identify Enterprise IT requirements for cloud adoption

                        .col-md-4.col-lg-3
                            .icon-block
                                .header
                                    .icon
                                        i.fa.fa-code-branch.icon-3x
                                            i.circle-border
                                h4 Develop
                                p Develop guides to help organizations quickly integrate cloud services

                        .col-md-4.col-lg-3
                            .icon-block
                                .header
                                    .icon
                                        i.fa.fa-comments.icon-3x
                                            i.circle-border
                                h4 Share
                                p Share experiences - good and bad - in walking the path to cloud

            section.page-section.secondary
                .container
                    .row
                        .col-md-4
                            h3.through-line What does OACA do?
                            .entry
                                h2
                                    a.post-link(href="#") Usage Guides
                                p We generate Usage Guides to capture common requirements and architectures
                            .entry
                                h2
                                    a.post-link(href="#") White Papers
                                p Our White Papers address issues and surface best practices in a range of domains
                            .entry
                                h2
                                    a.post-link(href="#") Cloud Adoption Stories
                                p
                                    | Read stories from member companies showing how specific enterprises have
                                    | adopted cloud services in private, public, and hybrid form.
                            .entry
                                h2
                                    a.post-link(href="#") Cloud Maturity Model
                                p Enabling inter-enterprise benchmarking and enterprise IT self-evaluation.

                        .col-md-4
                            h3.through-line What can I do?
                            p.summary Be a part of setting the global direction for Enterprise IT cloud adoption
                            .activities
                                .activity
                                    h2
                                        a(href="#") Share
                                    p Share your own data center and cloud adoption best practices.
                                .activity
                                    h2
                                        a(href="#") Participate
                                    p Participate in OACA Work Groups to create and refine new content
                                .activity
                                    h2
                                        a(href="#") Benefit
                                    p Benefit from participation in OACA virtual and in-person events
                                .activity
                                    h2
                                        a(href="#") Lead
                                    p
                                        | Be a
                                        span.highlight leader
                                        | in the industry

                        .col-md-4
                            h3.through-line Sponsors and Partners


        footer.page-footer
            .container
                .row
                    .col-sm-5
                        p
                            | Copyright &copy; Open Alliance for Cloud Adoption. All rights reserved.
                            | Linux Foundation is a registered trademark of The Linux Foundation.
                            | Linux is a registered trademark of Linus Torvalds.

                    .col-sm-7
                        ul.social-nav
                            li.nav-item
                                a(href="#" target="blank")
                                    i.fab.fa-github
                            li.nav-item
                                a(href="#" target="blank")
                                    i.fab.fa-twitter


        script(src="//code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        script(src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
        script(src="/js/oaca.min.js")
